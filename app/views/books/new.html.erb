<div class="container col-lg-8">

    <% if @book.errors.any? %>
        <div class="alert alert-danger">
            <ul>
                <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <%= render partial: "book_form", object: @book, as: 'book' %>

    <div class="text-center">
        <button class="btn btn-primary col-sm-8" onclick="$('#formBook').submit()">
            Submit
        </button>
    </div>
    
</div>

<script>
    setNavActive("books");
</script>